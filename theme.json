{
	"$schema": "https://schemas.wp.org/wp/6.6/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"custom": true,
			"customGradient": true,
			"customDuotone": true,
			"defaultDuotone": false,
			"defaultPalette": false,
			"defaultGradients": false
		},
		"layout": {
			"contentSize": "1024px",
			"wideSize": "1280px"
		},
		"spacing": {
			"units": ["%", "px", "em", "rem", "vh", "vw"]
		},
		"typography": {
			"fluid": true
		}
	},
	"customTemplates": [
		{
			"name": "books",
			"title": "Books",
			"postTypes": ["page"]
		},
		{
			"name": "single-book",
			"title": "Single Book",
			"postTypes": ["book"]
		}
	]
}